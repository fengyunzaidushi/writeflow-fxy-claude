{
  "name": "writeflow",
  "version": "2.9.0",
  "description": "AI 写作助手",
  "main": "dist/cli/index.js",
  "type": "module",
  "bin": {
    "writeflow": "./bin/writeflow.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "dev": "tsx src/cli/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:queue": "jest --testPathPattern=queue",
    "test:agent": "jest --testPathPattern=agent",
    "test:tools": "jest --testPathPattern=tools",
    "test:e2e": "jest --testPathPattern=e2e",
    "benchmark": "tsx scripts/benchmark.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "start": "node dist/cli/index.js",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist/",
    "bin/",
    "README.md"
  ],
  "keywords": [
    "ai",
    "writing",
    "cli",
    "typescript",
    "claude",
    "agent"
  ],
  "author": "WriteFlow Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "enquirer": "^2.4.0",
    "figures": "^6.1.0",
    "ink": "^4.0.0",
    "openai": "^4.67.3",
    "ora": "^8.0.0",
    "react": "^18.2.0",
    "tsx": "^4.0.0",
    "undici": "^6.20.0",
    "yaml": "^2.3.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@jest/globals": "^29.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wordflowlab/writeflow.git"
  },
  "bugs": {
    "url": "https://github.com/wordflowlab/writeflow/issues"
  },
  "homepage": "https://github.com/wordflowlab/writeflow#readme"
}
